  tx_kernel_enter();

  /* USER CODE BEGIN  Kernel_Start_Error */

  /* USER CODE END  Kernel_Start_Error */
}

/* USER CODE BEGIN 1 */
VOID led_thread_entry(ULONG initial_input)
{
	while(1)
	{
		tx_trace_user_event_insert(4096, 1, 2, 3, 4);
		// printf("Hello from LED thread. Initial input is: 0x%04X\n", (unsigned int) initial_input);

		if (tx_mutex_get(&led_mutex, TX_WAIT_FOREVER) == TX_SUCCESS) {
			HAL_GPIO_WritePin(LED1_G_GPIO_Port, LED1_G_Pin, GPIO_PIN_SET);
			tx_thread_sleep(100);   // 100 ticks = 1 s
			HAL_GPIO_WritePin(LED1_G_GPIO_Port, LED1_G_Pin, GPIO_PIN_RESET);
			tx_mutex_put(&led_mutex);
		}
	}
}

VOID led2_thread_entry(ULONG initial_input)
{
	while(1)
	{
		if (tx_mutex_get(&led_mutex, TX_WAIT_FOREVER) == TX_SUCCESS) {
			HAL_GPIO_WritePin(LED2_G_GPIO_Port, LED2_G_Pin, GPIO_PIN_SET);
			tx_thread_sleep(100);   // 100 ticks = 1 s
			HAL_GPIO_WritePin(LED2_G_GPIO_Port, LED2_G_Pin, GPIO_PIN_RESET);
			tx_mutex_put(&led_mutex);
		}
	}
}

VOID led3_thread_entry(ULONG initial_input)
{
	while(1)
	{
		if (tx_mutex_get(&led_mutex, TX_WAIT_FOREVER) == TX_SUCCESS) {
			HAL_GPIO_WritePin(LED3_G_GPIO_Port, LED3_G_Pin, GPIO_PIN_SET);
			tx_thread_sleep(100);   // 100 ticks = 1 s
			HAL_GPIO_WritePin(LED3_G_GPIO_Port, LED3_G_Pin, GPIO_PIN_RESET);
			tx_mutex_put(&led_mutex);
		}
	}
}
/* USER CODE END 1 */
